        "/api/currencies/covert": {
            "post": {
                "tags": [
                    "Currency 貨幣"
                ],
                "summary": "轉換貨幣",
                "description": "轉換貨幣",
                "operationId": "轉換貨幣",
                "requestBody": {
                    "description": "轉換貨幣",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "amount": {
                                        "type": "double",
                                        "example": 1.25
                                    },
                                    "from": {
                                        "type": "string",
                                        "example": "TWD"
                                    },
                                    "to": {
                                        "type": "string",
                                        "example": "JPY"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "回傳兌換後的結果",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "source_amount": {
                                            "type": "string",
                                            "example": "1.25"
                                        },
                                        "target_amount": {
                                            "type": "string",
                                            "example": "4.58625"
                                        },
                                        "from": {
